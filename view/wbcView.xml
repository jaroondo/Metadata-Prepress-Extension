<views xmlns="http://ns.adobe.com/metadata/ui/1.0/"> <!--Including the default namespace is a must -->
<!-- Views can have multiple views (panels) -->
	
	<!-- This wbc view displays all the properties of wbcSchema -->	
	<view
		xmlns:wbcSchema="http://my.wbcSchema.namespace/" 
		name="wbc.allPropertiesView"
		label="$$$/wbcSchema/Property/wbcAllPropsViewLabel=Web Center"
		description="$$$/wbcSchema/Property/wbcAllPropsViewDescription=This view displays the properties defined in the wbcSchema">
		
		<section label="Identification" type="labelled">
			<property name="wbcSchema:projectName" />
			<property name="wbcSchema:customerID" />
			<property name="wbcSchema:projectNumber" />
			<property name="wbcSchema:customersCode" />
		</section>
		<section label="Material" type="labelled">
			<property name="wbcSchema:stbCode" />
			<property name="wbcSchema:primer" />
			<property name="wbcSchema:finishing" />
		</section>
		<property name="wbcSchema:logo" />
		<property name="wbcSchema:internalPlantCode" />
		<property name="wbcSchema:sapDescription" multiLines="3"/>	
		
	</view>
	
</views>
